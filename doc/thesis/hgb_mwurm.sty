% usage:  \includepicture [width=1] [angle=0] {caption text} {filepath} {label}
% example:  \includepicture [0.75] [0] {A nice picture.} {img/img.png} {figure_label}
\newcommandx{\includepicture}[5][1=1,2=0]
{
	\begin{figure}[] %TODO: maybe remove the [H], to let figures float
		\centering
		\includegraphics[width=#1\textwidth,angle=#2]{\string"#5"}
		\caption{#3}
	  \label{fig:#4}
	\end{figure}
}


% NOTE:
% [] ... optional argument
% {} ... required argument

% usage:   \includepicture [width] [angle] [floating option] {caption text} {filepath} {label}
% example: \includepicture [0.75] [0] [H] {A nice picture.} {img/img.png} {figure_label}
\newcommandx{\includepicture}[6][1=1,2=0,3=]
{
	\begin{figure}[#3] %TODO: maybe use [H], to fix figures, or let figures float
		\centering
		\includegraphics[width=#1\textwidth,angle=#2]{\string"#6"}
		\caption{#4}
	  \label{fig:#5}
	\end{figure}
}

